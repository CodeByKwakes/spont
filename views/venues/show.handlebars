          <hr>

        </div>
 --}}
      </div>

    </div>

  </div>

  <br><hr><br>

  <div class="row">
    <div class="col-sm-4 center" >
      <a href="/venues" class="center btn">Back</a>
    </div>
    <div class="col-sm-4 center" >
      <a href="/venues/{{venue.id}}/edit"class="center btn">Edit</a>
    </div>
    <div class="col-sm-4 center">
      <form method="post" action="/venues/{{venue.id}}">
        <input type="hidden" name="_method" value="delete">
        <button class="center btn">Delete</button>
      </form>
    </div>
  </div>
