<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        {{venue.venueName}}
      </h1>
    </div>
  </div>
  
  <div class="row">

    <div class="col-md-12">

      <div class="thumbnail">
        <img class="img-responsive" src="https://static.designmynight.com/uploads/2016/08/Aviary-2-optimised.jpg" alt="{{venue.venueName}}">
        <div class="caption-full">
          {{!-- <h4 class="pull-right">{{venue.location.region}}</h4> --}}
          <h4>{{venue.location.area}} <small>{{venue.location.region}}</small>
          </h4>
          <p>{{venue.description}}</p>
        </div>
          <div class="ratings">
            {{!-- <p class="pull-right">3 reviews</p> --}}
            <p>{{venue.location.fullAddress.address1}}</p>
            <p>{{venue.location.fullAddress.address2}}</p>
            <p>{{venue.location.fullAddress.address3}}</p>
          </div>

          <div class="ratings">
            {{#each venue.events}}
            <p>{{eventName}}</p>
            <p>{{eventDate}}</p>
            {{/each}}
          </div>

        </div>

        <div class="well">

          <div class="text-right">
            <a class="btn btn-success">Leave a Review</a>
          </div>

          <hr>

          <div class="row">
            <div class="col-md-12">
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star-empty"></span>
              Anonymous
              <span class="pull-right">10 days ago</span>
              <p>This product was great in terms of quality. I would definitely buy another!</p>
            </div>
          </div>

          <hr>

        </div>

      </div>

    </div>

  </div>

  <br><hr><br>

  <div class="row">
    <div class="col-sm-4 center" >
      <a href="/venues" class="center btn">Back</a>
    </div>
    <div class="col-sm-4 center" >
      <a href="/venues/{{venue.id}}/edit"class="center btn">Edit</a>
    </div>
    <div class="col-sm-4 center">
      <form method="post" action="/venues/{{venue.id}}">
        <input type="hidden" name="_method" value="delete">
        <button class="center btn">Delete</button>
      </form>
    </div>
  </div>
</div> 