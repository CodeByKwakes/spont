<div class="container">
  <h1 class="center">Add New User</h1>
  <div class="row">
    <div class="col-s12 center">
      <form method="post" action="/users">
        <input type="text" name="user[firstName]" placeholder="First Name...">
        <input type="text" name="user[lastName]" placeholder="Last Name...">
        <input type="text" name="user[gender]" placeholder="Gender...">
        <input type="text" name="user[email]" placeholder="Email...">        
        <input type="text" name="user[postcode]" placeholder="Postcode...">        
        <input type="submit"class="btn" value="create">
      </form>
    </div>
  </div>
</div>