<div class="container">
  <h1 class="center"><%= event.eventName %></h1><br>

    <div class="row">
      <div class="col s12">
        <div class="center">
          <img src="https://static.designmynight.com/uploads/2016/08/Aviary-2-optimised.jpg" alt="<%= event.eventName %>" class="responsive-img">
        </div>
      </div>
    </div>

    <ul class="collection with-header">
      <li class="collection-header">
        <h4>Date:</h4>
        <p><%= event.eventDate %></p>
      </li>
      <li class="collection-item">Start Time: <%= event.startTime %></li>
      <li class="collection-item">End Time: <%= event.startTime %></li>
      <li class="collection-item">Create At: <%= event.createdAt %></li>
    </ul>

  <br><hr><br>

  <div class="row">
    <div class="col s4 center" >
      <a href="/events" class="center btn">Back</a>
    </div>
    <div class="col s4 center" >
      <a href="/events/<%= event.id %>/edit"class="center btn">Edit</a>
    </div>
    <div class="col s4 center">
      <form method="post" action="/events/<%= event.id %>">
        <input type="hidden" name="_method" value="delete">
        <button class="center btn">Delete</button>
      </form>
    </div>
  </div>
</div>